
<%= form_for :additionals, :html => { :class => "form-horizontal" } do |f| %>
<div class="">
   <div class="py-5 text-center">
      <h1>Servicios Adicionales</h1>
   </div>
   <div class="container">
      <div class="row">
         <div class="panel panel-primary">
            <div class="panel-heading">Registrar Serviciones Adicionales</div>
            <div class="panel-body">
              <div class="col-md-12">
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-10">
                    <%= label_tag(:parking, "Tus Estacionamientos: ") %>
                    <%= select_tag(:parking, options_for_select([["Playa de estacionamiento 1","r"],["Playa de Estacionamiento 2","r"]])) %> <br>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-10">
                    <%= label_tag(:service_type, "Tipo de servicio adicional: ") %>
                    <%= select_tag(:service_type, options_for_select([["Revision de llantas","r"],["Limpieza de vehículo","r"],["Lavado de lunas","r"],["Otros","o"]])) %> <br>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-2">
                    <%= label_tag(:comments, "Descripción del servicio adicional: ") %>
                    <%= text_area_tag(:comments, nil, size: "100x5") %> <br>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-10">
                    <%= label_tag(:price, "Tarifa S/. : ") %>
                    <%= number_field(:product, :price, in: 0.0..50.0, step: 5) %> <br>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-10">
                     <button type="submit" class="btn btn-default">Registrar</button>
                     <button type="cancel" class="btn btn-default">Cancelar</button>
                    </div>
                </div>
                </div>
                
              </div>
            </div>
         </div>
      </div>
   </div>
<% end %>
